<header class="navbar navbar-toggleable-md navbar-light bg-white fixed-top mediumnavigation">
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarsWow" aria-controls="navbarsWow" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="container">
        <a class="navbar-brand" asp-action="Index" asp-controller="Home">
            <img src="~/img/logo.png" alt="Logo of Entertainment and Blog Platform">
        </a>
        @await Html.PartialAsync("_SocialMediaAccounts")
        <div class="collapse navbar-collapse" id="navbarsWow">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Home">Home</a>
                </li>
                @await Component.InvokeAsync("Menu")
                <li class="nav-item">
                    <a class="nav-link" asp-action="About" asp-controller="Home">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link"asp-action="Contact" asp-controller="Home">Contact</a>
                </li>

                @if(User.Identity.IsAuthenticated)
                {
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">                                
                        <img width="30px" src="~/img/0c3b3adb1a7530892e55ef36d3be6cb8.png"/>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdown01">
                        <a class="dropdown-item" asp-action="Profile" asp-controller="Account">Profile</a>
                        <a class="dropdown-item" asp-action="LogOut" asp-controller="Account">Sign-Out</a>
                    </div>
                    </li>
                }
                else
                {
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">                                
                        <img width="30px" src="~/img/0c3b3adb1a7530892e55ef36d3be6cb8.png"/>
                    </a>                    
                    <div class="dropdown-menu" aria-labelledby="dropdown01">
                        <a class="dropdown-item" asp-action="Signin" asp-controller="Account">Sign-in</a>
                        <a class="dropdown-item" asp-action="Register" asp-controller="Account">Register</a>
                    </div>
                    </li>           
                }
                <partial name="/Views/Shared/_Search.cshtml" />
            </ul>
        </div>
    </div>
</header>
