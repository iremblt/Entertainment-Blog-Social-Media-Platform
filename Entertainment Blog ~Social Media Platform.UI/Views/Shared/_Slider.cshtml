@model List<PostListDTO>  
<div id="carouselExampleIndicators" class="carousel slide mb-3" data-ride="carousel">
    @if (Model.Count >= 3)
    {
        <ol class="carousel-indicators">
            @for (int i = 0; i < 3; i++)
            {
                if (i == 0)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
                }
                else
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                }
            }
        </ol>
        <div class="carousel-inner">
            @for (int i = 0; i < 3; i++)
            {
                if (i == 0)
                {
            <div class="carousel-item active">
                <a asp-action="Details" asp-controller="Post" asp-route-id="@Model[i].Id">
                    <img src="/img/@Model[i].Thumbnail" class="d-block w-100" alt="@Model[i].Title" width="1280" height="720">
                </a>
                <div class="carousel-caption d-none d-md-block">
                    <h5>@Model[i].Title</h5>
                    <p>@Model[i].Summary</p>
                </div>
            </div>
                } else
                {
                    <div class="carousel-item">
                        <a asp-action="Details" asp-controller="Post" asp-route-id="@Model[i].Id">
                            <img src="/img/@Model[i].Thumbnail" class="d-block w-100" alt="@Model[i].Title" width="1280" height="720">
                        </a>
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@Model[i].Title</h5>
                            <p>@Model[i].Summary</p>
                        </div>
                    </div>
                }
            }
        </div>
    }
    else
    {
        <ol class="carousel-indicators">
            @for (int i = 0; i < Model.Count; i++)
            {
                if (i == 0)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
                }
                else
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                }
            }
        </ol>
        <div class="carousel-inner">
            @{ var index = 0;}
            @foreach (var item in Model)
            {
                if (index == 0)
                {
            <div class="carousel-item active">
                <a asp-action="Details" asp-controller="Post" asp-route-id="@item.Id">
                    <img src="/img/@item.Thumbnail" class="d-block w-100" alt="@item.Title" width="1280" height="720">
                </a>
                <div class="carousel-caption d-none d-md-block">
                    <h5>@item.Title</h5>
                    <p>@item.Summary</p>
                </div>
            </div>
            index++;
                }
                else
                {
                    <div class="carousel-item">
                        <a asp-action="Details" asp-controller="Post" asp-route-id="@item.Id">
                            <img src="/img/@item.Thumbnail" class="d-block w-100" alt="@item.Title" width="1280" height="720">
                        </a>
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@item.Title</h5>
                            <p>@item.Summary</p>
                        </div>
                    </div>
                }
            }
        </div>
    }
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>