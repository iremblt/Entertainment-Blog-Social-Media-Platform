@model CategoryEditDTO
@{
    ViewData["Title"] = "Category Editing List";
}
<form asp-controller="Category" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <br />@Html.AntiForgeryToken()
    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <input class="form-control" placeholder="Name" asp-for="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    Select Post or Posts You Want to Delete From The Category
                </div>
                <div class="card-body">
                    <div class="form-group">
                        @foreach (var post in Model.PostCategories)
                        {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="PostIds" value="@post.PostId" id="post_@(post.PostId)" />
                            <label class="form-check-label" for="post_@(post.PostId)">@post.Post.Title</label>
                            <img class="featured-image img-fluid" for="post_@(post.PostId)" src="~/img/@post.Post.Thumbnail" alt="@post.Post.Title">
                        </div>
                        }
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block mt-4"> Edit </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>